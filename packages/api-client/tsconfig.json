{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "composite": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "../shared-types"
        }
    ]
}