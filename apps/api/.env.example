# Authentication Configuration
# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bits-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-different-from-access-token
ENABLE_JWT_VALIDATION=true

# Backend Service Authentication (BFF to your own services)
BACKEND_API_KEY=your-backend-service-api-key

# External Service Authentication (BFF to third-party services)
# GIS API Service
GIS_API_KEY=your-gis-api-key

# WMS Service (if requires basic auth)
WMS_USERNAME=your-wms-username
WMS_PASSWORD=your-wms-password

# OAuth2 Service (if using OAuth2 for external services)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_TOKEN_ENDPOINT=https://oauth-provider.com/token

# External Service URLs
GIS_API_BASE_URL=https://gis-dev.listlabs.net/api
WMS_BASE_URL=https://ows.terrestris.de/osm/service

# Mock data toggle
USE_MOCK_DATA=true

# Server configuration
PORT=3001